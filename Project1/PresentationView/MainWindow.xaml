<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm1="clr-namespace:ViewModel;assembly=ViewModel"
        mc:Ignorable="d"
        Title="Concurrent programming" 
        Height="{x:Static SystemParameters.PrimaryScreenHeight}" 
        Width="{x:Static SystemParameters.PrimaryScreenWidth}"
        WindowState="Maximized">
    <Window.DataContext>
        <vm1:ViewModelMainWindow />
    </Window.DataContext>
    <StackPanel Orientation="Vertical">

        <Canvas Width="650" Height="850">
            <Grid>
                <Button x:Name="startButton" Content="Start" Height="50" Width="100" Margin="295,667,255,117" IsEnabled="{Binding State}" Command="{Binding StartButtonClick}" />
                <Label  Margin="400,667,63,117" FontSize="15" FontWeight="Bold" Content="{Binding ErrorMessage}"/>
                <TextBox IsEnabled="{Binding State}" Name="intputText" Text="{Binding InputText}" FontSize="30" TextAlignment="Center" Height="50"  Width="240" BorderBrush="Black"  BorderThickness="2" Margin="50,667,360,117"/>

                <Grid x:Name="board" Height="550" Width="550" Margin="25,27,25,207" >

                    <Border BorderBrush="Black" Background="LightGray" BorderThickness="3">
                        <ItemsControl ItemsSource="{Binding Balls}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas Height="550" Width="550" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Ellipse Width= "{Binding Diameter}" Height="{Binding Diameter}" Fill="Red" Stroke="Black"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>

                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter  Property="Canvas.Top" Value="{Binding Left}"/>
                                    <Setter Property="Canvas.Left" Value="{Binding Top}"/>
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                        </ItemsControl>
                    </Border>
                </Grid>
            </Grid>

        </Canvas>
    </StackPanel>
</Window>