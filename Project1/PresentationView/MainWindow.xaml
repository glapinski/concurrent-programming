<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:ViewModel;assembly=ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1000" ResizeMode="NoResize">
    <Window.DataContext>
        <viewmodel:ViewModel/>
    </Window.DataContext>
    <StackPanel Orientation="Vertical">

        <Canvas Width="536" Height="684">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="29*"/>
                    <RowDefinition Height="39*"/>
                </Grid.RowDefinitions>
                <Button x:Name="startButton" Content="Rozpocznij" FontSize="25" Margin="-170,393,850,272" IsEnabled="{Binding Active}" Command="{Binding StartButtonClicked}" Grid.Row="1" />
                <Label FontSize="25" Foreground="Black" Margin="-170,173,850,573" Content="{Binding ErrorMessage}" Grid.Row="1"/>
                <TextBox IsEnabled="{Binding Active}" Name="intputText" Text="{Binding InputText}" FontSize="30" TextAlignment="Center" Height="50"  Width="240" BorderBrush="Gray"  BorderThickness="2" Margin="-170,116,850,621" Grid.Row="1"/>
                <TextBlock Text="Wpisz ilość kulek" VerticalAlignment="Top" Margin="-170,54,170,0" Grid.Row="1" Height="63" FontSize="30"/>

                <Grid x:Name="board" Width="500" Height="500" Margin="90,40,160,257" Grid.RowSpan="2" >

                    <Border BorderBrush="Gray" Background="LightGray" BorderThickness="3" Margin="0,0,-15,-15">
                        <ItemsControl ItemsSource="{Binding balls}" Margin="0,0,22,22">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas Height="575" Width="575" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Ellipse Width= "20" Height="20" Fill="Red" Stroke="Black" StrokeThickness="1"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>

                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter  Property="Canvas.Top" Value="{Binding Y}"/>
                                    <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                        </ItemsControl>
                    </Border>
                </Grid>
            </Grid>

        </Canvas>
    </StackPanel>
</Window>