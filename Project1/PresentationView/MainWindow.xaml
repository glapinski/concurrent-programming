<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:Presentation.ViewModel;assembly=ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize">
    <Window.Resources>
        <viewmodel:ViewModel x:Key="vm"></viewmodel:ViewModel>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600*"/>
            <ColumnDefinition Width="200*"/>
        </Grid.ColumnDefinitions>
        <Button Name="AddBallsButton"
                    Content="Dodaj kulki"
                    VerticalAlignment="Center"
                    Padding="30" Grid.Column="1" Command="{Binding StartButtonClicked}"/>
        <TextBlock Grid.Column="1" Padding="10" Margin="65,120,35,-20"><Run Language="pl-pl" Text="Ilosc kulek"/><LineBreak/><Run Language="pl-pl"/></TextBlock>
        <TextBox Name="BallsCount" Text="" Grid.Column="1" Margin="76,149,71,261"/>
        
    </Grid>
</Window>
